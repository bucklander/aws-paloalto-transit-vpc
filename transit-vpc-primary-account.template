            "Resource": "*"
          },
      {
            "Sid": "Allow use of the key",
            "Effect": "Allow",
            "Principal": { "AWS": [
        { "Fn::Join" : ["", ["arn:aws:iam::",{"Fn::If": ["AuthorizeAnotherAccount", {"Ref" : "AccountId" }, { "Ref" : "AWS::AccountId" } ]}, ":root" ]]},
